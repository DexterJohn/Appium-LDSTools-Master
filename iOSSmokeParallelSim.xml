<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="iOS Smoke Test suite" configfailurepolicy="continue" parallel="tests"  thread-count="2">	
    <parameter name="os" value="ios" />
	<listeners>
	    <listener class-name="LDSTest.RetryListener"/>
	    <listener class-name= "LDSTest.CustomReporter" />
	    <listener class-name="LDSTest.TestListener" />
	</listeners>
	
	<test name="Smoke Test 1" thread-count="2" parallel="instances">
		<parameter name="os" value="ios" />
		<parameter name="fileName" value="LDS Tools.app" />
		<parameter name="testDevice" value="FBSIM-iPhone 7" />
		<parameter name="startSleepTime" value="0200" />  

		<groups>
		    <run>
		        <include name="smoke1"/>
		        <include name="smoke2"/>
		    </run>
		</groups>
		
		<classes>
		    <class name="LDSTest.LDSTools"/>
		    <class name="LDSTest.LDSTools$Retry"/>      
		</classes>
	</test> <!-- Smoke Test 1-->
	
	<test name="Smoke Test 2" thread-count="2" parallel="instances">
		<parameter name="os" value="ios" />
		<parameter name="fileName" value="LDS Tools.app" />
		<parameter name="testDevice" value="FBSIM-iPhone 7 Plus" />
		<parameter name="startSleepTime" value="60000" />  

		<groups>
		    <run>
		        <include name="smoke3"/>
		        <include name="smoke4"/>
		    </run>
		</groups>
		
		<classes>
		    <class name="LDSTest.LDSTools"/>
		    <class name="LDSTest.LDSTools$Retry"/>      
		</classes>
	</test> <!-- Smoke Test 2 -->
	
	
</suite> <!-- Default suite -->