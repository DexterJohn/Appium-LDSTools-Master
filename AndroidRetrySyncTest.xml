<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Android Retry Sync Test Suite">
  <test verbose="2" name="Android Sync test"  configfailurepolicy="continue">
      <parameter name="os" value="android" />
      <parameter name="fileName" value="ldstools-tools-alpha.apk" />
      <parameter name="testDevice" value="05157df5a1394b1c" />
      <parameter name="numberOfRetries" value="500" />
      <groups>
          <run>
              <include name="retrySync"/>
          </run>
      </groups>
      
      <listeners>
          <listener class-name="LDSTest.RetryListener"/>
          <listener class-name= "LDSTest.CustomReporter" />
          <listener class-name="LDSTest.TestListener" />
      </listeners>
      
      <classes>
          <class name="LDSTest.LDSTools"/>
          <class name="LDSTest.LDSTools$Retry"/>      
      </classes>
      
  </test> <!-- Default test -->
</suite> <!-- Default suite -->