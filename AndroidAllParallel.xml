<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Android All Tests suite" configfailurepolicy="continue" parallel="tests"  thread-count="4">	
    <parameter name="os" value="android" />
	<listeners>
	    <listener class-name="LDSTest.RetryListener"/>
	    <listener class-name= "LDSTest.CustomReporter" />
	    <listener class-name="LDSTest.TestListener" />
	</listeners>
	
	<test name="All Test 1" thread-count="4" parallel="instances">
	    <parameter name="os" value="android" />
	    <parameter name="fileName" value="ldstools-alpha.apk" />
	    <parameter name="testDevice" value="STF-Pool" />
	    <parameter name="startSleepTime" value="1000" />

	    <!-- Excluding Headers tests for now they are broken -->
		<groups>
		    <run>
		        <include name="all1"/>
		        <exclude name="header"/>
		    </run>
		</groups>
		
		<classes>
		    <class name="LDSTest.LDSTools"/>
		    <class name="LDSTest.LDSTools$Retry"/>      
		</classes>
	</test> 
	
	<test name="All Test 2" thread-count="4" parallel="instances">
