	    <parameter name="testDevice" value="STF-Pool" />
	    <parameter name="startSleepTime" value="15000" />

		<groups>
		    <run>
		        <include name="all2"/>
		        <exclude name="header"/>
		    </run>
		</groups>
		
		<classes>
		    <class name="LDSTest.LDSTools"/>
		    <class name="LDSTest.LDSTools$Retry"/>      
		</classes>
	</test> 
	
	<test name="All Test 3" thread-count="4" parallel="instances">
	    <parameter name="os" value="android" />
	    <parameter name="fileName" value="ldstools-alpha.apk" />
	    <parameter name="testDevice" value="STF-Pool" />
	    <parameter name="startSleepTime" value="30000" />

		<groups>
		    <run>
		        <include name="all3"/>
		        <exclude name="header"/>
		    </run>
		</groups>
		
		<classes>
		    <class name="LDSTest.LDSTools"/>
		    <class name="LDSTest.LDSTools$Retry"/>      
		</classes>
	</test> 
	
	<test name="All Test 4" thread-count="4" parallel="instances">
