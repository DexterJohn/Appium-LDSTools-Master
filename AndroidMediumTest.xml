<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Android Medium Test suite" configfailurepolicy="continue">
	<parameter name="os" value="android" />
	<parameter name="fileName" value="ldstools-alpha.apk" />
	<parameter name="testDevice" value="STF-Pool" />
	
	<listeners>
	    <listener class-name="LDSTest.RetryListener"/>
	    <listener class-name= "LDSTest.CustomReporter" />
	    <listener class-name="LDSTest.TestListener" />
	</listeners>
	
	<test verbose="2" name="Android Medium test">
	    <parameter name="os" value="android" />
	    <parameter name="fileName" value="ldstools-alpha.apk" />
	    <parameter name="testDevice" value="STF-Pool" />
		
		<groups>
		    <run>
		        <include name="medium"/>
		    </run>
		</groups>
		
		<classes>
		    <class name="LDSTest.LDSTools"/>
		    <class name="LDSTest.LDSTools$Retry"/>      
		</classes>
	     
	</test> <!-- Default test -->
</suite> <!-- Default suite -->