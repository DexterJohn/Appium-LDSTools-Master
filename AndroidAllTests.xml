<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Run All Android Tests">
  <test verbose="2" name="Android All tests" configfailurepolicy="continue">
      <parameter name="os" value="android" />
      <parameter name="fileName" value="ldstools-tools-beta.apk" />
      <parameter name="testDevice" value="8XV5T15A30006448" />
      
      <groups>
          <run>
              <exclude name="retrySync"/>
              <exclude name="jft"/>
          </run>
      </groups>
      
      <listeners>
          <listener class-name="LDSTest.RetryListener"/>  
          <listener class-name= "LDSTest.CustomReporter" />
          <listener class-name="LDSTest.TestListener" />
      </listeners>
          
      <classes>
          <class name="LDSTest.LDSTools"/>
          <class name="LDSTest.LDSTools$Retry"/>      
      </classes>
      
  </test> <!-- Default test -->
</suite> <!-- Default suite -->