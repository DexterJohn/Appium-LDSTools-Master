<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="iOS All Tests suite" configfailurepolicy="continue" parallel="tests"  thread-count="4">	
    <parameter name="os" value="ios" />
	<listeners>
	    <listener class-name="LDSTest.RetryListener"/>
	    <listener class-name= "LDSTest.CustomReporter" />
	    <listener class-name="LDSTest.TestListener" />
	</listeners>
	
	<test name="All Test 1" thread-count="4" parallel="instances">
		<parameter name="os" value="ios" />
		<parameter name="fileName" value="LDSTools.ipa" />
		<parameter name="testDevice" value="REAL-Z6iphone" />
		<parameter name="startSleepTime" value="0200" /> 

		<groups>
		    <run>
		        <include name="all1"/>
		        <exclude name="addUnit"/>
		    </run>
		</groups>
		
		<classes>
		    <class name="LDSTest.LDSTools"/>
		    <class name="LDSTest.LDSTools$Retry"/>      
		</classes>
	</test> 
	
	<test name="All Test 2" thread-count="4" parallel="instances">
		<parameter name="os" value="ios" />
		<parameter name="fileName" value="LDSTools.ipa" />
		<parameter name="testDevice" value="REAL-ZiPhone7" />
		<parameter name="startSleepTime" value="60000" />  
		
		<groups>
		    <run>
		        <include name="all2"/>
		        <exclude name="addUnit"/>
		    </run>
		</groups>
		
		<classes>
		    <class name="LDSTest.LDSTools"/>
		    <class name="LDSTest.LDSTools$Retry"/>      
		</classes>
	</test> 
	
	<test name="All Test 3" thread-count="4" parallel="instances">
		<parameter name="os" value="ios" />
		<parameter name="fileName" value="LDSTools.ipa" />
		<parameter name="testDevice" value="REAL-Z6SPlus" />
		<parameter name="startSleepTime" value="90000" />  
		<groups>
		    <run>
		        <include name="all3"/>
		        <exclude name="addUnit"/>
		    </run>
		</groups>
		
		<classes>
		    <class name="LDSTest.LDSTools"/>
		    <class name="LDSTest.LDSTools$Retry"/>      
		</classes>
	</test> 
	
	<test name="All Test 4" thread-count="4" parallel="instances">
		<parameter name="os" value="ios" />
		<parameter name="fileName" value="LDSTools.ipa" />
		<parameter name="testDevice" value="REAL-Z6plus" />
		<parameter name="startSleepTime" value="120000" />  

		<groups>
		    <run>
		        <include name="all4"/>
		        <exclude name="addUnit"/>
		    </run>
		</groups>
		
		<classes>
		    <class name="LDSTest.LDSTools"/>
		    <class name="LDSTest.LDSTools$Retry"/>      
		</classes>
	</test> 
</suite> 