<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="medium test suite" configfailurepolicy="continue">
    <parameter name="os" value="ios" />
		      
     <listeners>
         <listener class-name="LDSTest.RetryListener"/>
         <listener class-name= "LDSTest.CustomReporter" />
         <listener class-name="LDSTest.TestListener" />
     </listeners>
	      
	
  	<test verbose="2" name="medium test">
		<parameter name="os" value="ios" />
		<parameter name="fileName" value="LDS Tools.app" />
		<parameter name="testDevice" value="iPhone 7" />
		<parameter name="startSleepTime" value="1000" /> 
		
		<!-- Excluding Headers tests for now they are broken -->
		<groups>
			<run>
				<include name="medium"/>
				<exclude name="header"/>
			</run>
		</groups>
		
		<classes>
			<class name="LDSTest.LDSTools"/>
			<class name="LDSTest.LDSTools$Retry"/>      
		</classes>
      
  	</test> <!-- Default test -->
</suite> <!-- Default suite -->